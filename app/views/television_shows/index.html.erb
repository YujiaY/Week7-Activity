<h1>Television Shows</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @television_shows.each do |television_show| %>
      <tr>
        <td><%= television_show.name %></td>
        <td><%= television_show.details %></td>
        <td><%= link_to 'Show', television_show %></td>
        <td><%= link_to 'Edit', edit_television_show_path(television_show) %></td>
        <td><%= link_to 'Destroy', television_show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

